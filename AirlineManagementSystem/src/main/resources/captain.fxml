    <Button layoutX="426.0" layoutY="257.0" onAction="#handleAddCaptain" text="Hire Captain" />
    <Button layoutX="532.0" layoutY="257.0" onAction="#handleDeleteCaptain" text="Fire Captain" />
    <Button layoutX="637.0" layoutY="257.0" onAction="#handleClear" text="Clear" />
    <Button layoutX="710.0" layoutY="257.0" onAction="#handleBack" text="Back" />
    <Button layoutX="612.0" layoutY="160.0" onAction="#handleViewInfo" prefHeight="41.0" prefWidth="79.0" text="View Info" />
   <ImageView fitHeight="120.0" fitWidth="119.0" layoutX="5.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
