    <Label layoutX="303.0" layoutY="181.0" text="Address:" />
    <TextField fx:id="addresstxt" layoutX="299.0" layoutY="202.0" prefHeight="25.0" prefWidth="83.0" />

    <Label layoutX="58.0" layoutY="114.0" text="SSN:" />
